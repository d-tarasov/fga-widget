<!-- TODO create dark version of widget -->
<!--suppress AndroidLintContentDescription -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:background="@drawable/appwidget_bg_clickable"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fucking_great_advice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textSize="16sp"
        android:text="@string/fucking_great_advice"
        android:textColor="@android:color/black"/>

    <ImageButton
        android:id="@+id/refresh"
        android:background="@null"
        android:src="@drawable/refresh_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_height="40dp"
        android:layout_width="40dp"/>

    <TextView
        android:id="@+id/advice"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/fucking_great_advice"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/wait_for_connection"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

</RelativeLayout>

